<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite>

    <!-- HTML pages -->
    <rule>
        <from>^/page/(.*)</from>
        <to>/static/uncached/latest/html/$1</to>
    </rule>

    <!-- static files that are minified -->
    <rule>
        <condition type="header" name="Accept-Encoding">.*gzip.*</condition>
        <from>^/static/(cached|unached)/[\w-]+/(.*)\.(js|css)$</from>
        <to type="forward">/static/$1/latest/$2.min.$3</to>
    </rule>

    <!-- static files that are NOT minified -->
    <rule>
        <from>^/static/(cached|unached)/[\w-]+/(.*)\.(html)$</from>
        <to type="forward">/static/$1/latest/$2.$3</to>
    </rule>

</urlrewrite>
