<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite>

    <!-- HTML pages -->
    <rule>
        <from>^/page/([\w-_]+).html$</from>
        <to>/static/latest/$1/$1.html</to>
    </rule>

    <!-- static files that are minified -->
    <rule>
        <from>^/static/[\w-]+/(.*)\.(js|css)$</from>
        <to>/static/latest/$1.min.$2</to>
    </rule>

    <!-- static files that are NOT minified -->
    <rule>
        <from>^/static/[\w-]+/(.*)\.(html)$</from>
        <to>/static/latest/$1.$2</to>
    </rule>

</urlrewrite>
